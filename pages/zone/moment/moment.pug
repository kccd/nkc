extends ../../bootstrap_base
block title
  title 电文详情
  +includeCSS('/zone/moment/moment.css')
block content
  .container-fluid.max-width
    .row
      .col-xs-12.col-md-8.col-md-offset-2
        .zone-moment-container
          #app(v-cloak)
            ////动态操作
            //moment-option(
            //  ref="momentOption"
            //  @complaint="complaint"
            //)
            complaint(ref="complaint")
            violation-record(ref="violationRecord")
            moment-comment-child(ref='momentCommentChild')
            moment(
              ref='moment'
              :data="momentListData"
              :focus='focusCommentId'
              @open-option="openOption"
              @option-comment-option="openOption"
              :permissions="permissions"
              mode='complete'
              )
  .hidden#data=objToStr({momentListData: data.momentListData, focusCommentId: data.focusCommentId, permissions: data.permissions})
block scripts
  include ../../publicModules/moment/momentSource
  +includeJS('/zone/moment/moment.js')
